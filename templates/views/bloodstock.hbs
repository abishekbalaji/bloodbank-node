<section id="bloodstock">
    <h1 class="bloodbank__title">Blood Bank</h1>
    <table class="bloodbank__table">
        <tr>
            <th>Blood Group</th>
            <th>Volume (in ml)</th>
        </tr>
        {{#each blood}}
        <tr>
            <td>{{this.bloodType}}</td>
            <td>{{this.volume}}</td>
        </tr>
        {{/each}}
    </table>
</section>



