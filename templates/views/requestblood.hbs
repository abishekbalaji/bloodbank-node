<section id="request-blood">
    <h1 class="request-blood__title">Request Blood</h1>
    <p id="request-blood-message">{{message}}</p>
    <form method="POST" action="/request-blood" id="request-blood__form">
        <div class="form-group">
            <label for="exampleInputEmail1">Blood Group</label>
            <input name="bloodGroup" type="text" pattern="[ABO][AB+-1]?[AB]?[+-]" class="form-control"
                id="exampleInputEmail1" placeholder="Format: A+, A1+, AB-, ..." required>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Volume (in ml)</label>
            <input name="volume" type="number" class="form-control" placeholder="in ml" id="exampleInputPassword1"
                required>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
        <button type="reset" class="btn btn-danger">Clear</button>
    </form>
</section>
</body>

</html>