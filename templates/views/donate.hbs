{{>header}}

<body>

    <!--NAVBAR  -->


    <section id="nav-bar">
        <nav class="navbar navbar-expand-lg navbar-color fixed-top ">
            <a class="navbar-brand" href="#">Blood Bank Managment</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                    <li id="nav-space" class="nav-item active">
                        <a class="nav-link" href="/donor-home">Home <span
                                class="sr-only">(current)</span></a>
                    </li>
                    <li id="nav-space" class="nav-item">
                        <a class="nav-link" href="#">Donate</a>
                    </li>
                    <li id="nav-space" class="nav-item">
                        <a class="nav-link" href="/donor-logout">Logout</a>
                    </li>


                </ul>
            </div>

        </nav>

    </section>

    <!-- DONOR FORM -->

    <section id="donorlogin">
        <h1 style="text-align: center;color: brown;">Donate Blood</h1><br>
        <form method="POST" action="/donate">
            <div class="form-group">
                <label for="exampleInputName1">Name</label>
                <input name="name" type="text" class="form-control" id="exampleInputName1" required>
            </div>
            <div class="form-group">
                <label for="exampleInputText1">Age</label>
                <input name="age" type="text" class="form-control" id="exampleInputText1"
                    placeholder="Donor must be 18 - 65 years old " required>
            </div>
            <div class="form-group">
                <label for="exampleInputText1">Weight</label>
                <input name="weight" type="text" class="form-control" id="exampleInputText1"
                    placeholder="Minimum should be 50kg  " required>
            </div>
            <div class="form-group">
                <label for="exampleInputText1"> Blood Group</label>
                <input name="bloodGroup" type="text" class="form-control" id="exampleInputText1"
                    placeholder="format:- AB +ve" required>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input name="email" type="email" class="form-control" id="exampleInputEmail1"
                    aria-describedby="emailHelp" required>
            </div>
            <div class="form-group">
                <label for="exampleInputRadio1">Do you have any disease?</label>
                <input type="radio" id="Yes" name="haveDisease" value="Yes" required>
                <label for="Yes" class="radio-spacing">Yes </label>
                <input type="radio" id="No" name="haveDisease" value="No" required>
                <label for="No" class="radio-spacing">No</label>
            </div>

            <div class="form-group">
                <label for="exampleInputPhoneno1">Phone No</label>
                <input name="phone" type="tel" class="form-control" pattern="[0-9]{10}" id="exampleInputPhoneno1"
                    required>
            </div>
            <div class="form-group">
                <label for="exampleInputLocation1">Location</label>
                <input name="location" type="text" class="form-control" id="exampleInputLocation1" required>
            </div>



            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </section>


</body>

</html>